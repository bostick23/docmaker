<Window x:Class="DocMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocMaker"
        mc:Ignorable="d"
        Title="DocMaker" Height="450" Width="800">
    <Grid Background="#eff4f9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button
            x:Name="BtStartStop" 
            Click="BtStartStop_Click"
            Grid.Row="0" 
            Grid.Column="0" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Background="#1975c5"
            Foreground="White"
            Padding="10,10,10,10">Capture</Button>
        <Button
            x:Name="BtOpenParameters"
            Click="BtOpenParameters_Click"
            Grid.Row="0" 
            Grid.Column="0" 
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Background="#1975c5"
            Foreground="White"
            Padding="10,10,10,10">Parameters</Button>
    </Grid>
</Window>
